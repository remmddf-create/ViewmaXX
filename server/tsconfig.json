    "target": "es2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  "lib": ["esnext"],
  "checkJs": true
  },
  "include": ["*.ts", "**/*.ts"]
}
